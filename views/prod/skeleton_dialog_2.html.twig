{% set skeleton_domain = constant('Alchemy\\SkeletonPlugin\\ServiceProvider\\SkeletonPluginServiceProvider::SKELETON_TEXTDOMAIN') %}

{% if basketName is not null %}
    <h3>{{ 'basket_selected'|trans({'%basketName%': basketName}, skeleton_domain) }} </h3>
{% elseif records is not empty %}
    <h3>{{ 'document_selected'|transchoice(records.count, [], skeleton_domain) }}</h3>
{% endif %}

<h2>{{ 'flattened_records'|transchoice(flattenedRecords|length, [], skeleton_domain) }}</h2>

<br/>
<br/>
<span class="skeleton_error"></span>
<br/>
<br/>

<button class="btn btn-inverse SKELETON_close_btn" type="button">
    {{ 'close'|trans({}, skeleton_domain) }}
</button>


{% set config = app['plugin.skeleton.config'].skeleton %}
{% set requestor = app.getAuthenticatedUser().getLogin() %}

<script type="text/javascript">
    $('.SKELETON_close_btn').on('click', function () {
        dialog.get({{ dialog_level }}).close();
    });
</script>
